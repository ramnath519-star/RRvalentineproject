  <script>
    function showMessage() {
      const name = document.getElementById("name").value.trim();
      const result = document.getElementById("result");

      if (name === "") {
        result.style.display = "block";
        result.innerHTML = "You can‚Äôt tag without a name üòú";
        return;
      }

      result.style.display = "block";
