<script>
/* Valentine Week Data */
const week = [
  ["Rose Day", "Our love blooms brighter than any rose üåπ"],
  ["Propose Day", "Every heartbeat whispers your name üíç"],
  ["Chocolate Day", "Life is sweeter with you üç´"],
  ["Teddy Day", "You are my comfort ü§ç"],
  ["Promise Day", "Always & forever ü§û"],
  ["Hug Day", "This hug says it all ü§ó"],
  ["Kiss Day", "Love sealed with a kiss üíã"],
  ["Valentine‚Äôs Day", "You are my everything ‚ù§Ô∏è"]
];

const daysEl = document.getElementById("days");
week.forEach((d, i) => {
  const el = document.createElement("div");
  el.className = "day" + (i === 0 ? " active" : "");
  el.innerText = d[0];
  el.onclick = () => selectDay(i);
  daysEl.appendChild(el);
});

function selectDay(i) {
  document.querySelectorAll(".day").forEach(d => d.classList.remove("active"));
  daysEl.children[i].classList.add("active");
  document.getElementById("dayTitle").innerText = "Happy " + week[i][0];
  document.getElementById("dayText").innerText = week[i][1];
}

/* Growing Rose + Sound + Confetti */
let scale = 1;
const rose = document.getElementById("rose");

setInterval(() => {
  scale += 0.08;
  rose.style.transform = `scale(${scale})`;
  blastConfetti();
  playPop();
}, 1000);

/* Sound (Web Audio) */
function playPop() {
  const ctx = new (window.AudioContext || window.webkitAudioContext)();
  const osc = ctx.createOscillator();
  const gain = ctx.createGain();
  osc.connect(gain);
  gain.connect(ctx.destination);
  osc.frequency.value = 500;
  gain.gain.value = 0.08;
  osc.start();
  osc.stop(ctx.currentTime + 0.08);
}

/* Confetti */
function blastConfetti() {
  for (let i = 0; i < 10; i++) {
    const c = document.createElement("div");
    c.className = "confetti";
    c.innerHTML = Math.random() > 0.5 ? "‚ù§Ô∏è" : "‚ú®";
    c.style.left = 45 + Math.random() * 10 + "vw";
    c.style.top = "45vh";
    document.body.appendChild(c);
    setTimeout(() => c.remove(), 1200);
  }
}

/* NO Button Escape */
const noBtn = document.getElementById("noBtn");
noBtn.onmouseover = moveNo;
noBtn.onclick = moveNo;

function moveNo() {
  noBtn.style.transform =
    `translate(${Math.random()*200-100}px, ${Math.random()*100-50}px)`;
}

/* YES */
function acceptLove() {
  document.getElementById("loveMsg").style.display = "block";
  document.getElementById("againBtn").style.display = "inline-block";
}

/* Reset */
function resetPage() {
  location.reload();
}

/* Falling hearts */
setInterval(() => {
  const f = document.createElement("div");
  f.className = "float";
  f.innerHTML = Math.random() > 0.5 ? "‚ù§Ô∏è" : "üåπ";
  f.style.left = Math.random() * 100 + "vw";
  f.style.animationDuration = Math.random() * 3 + 4 + "s";
  document.body.appendChild(f);
  setTimeout(() => f.remove(), 7000);
}, 350);
</script>

