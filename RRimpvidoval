<script>
let personName="Rishitha";
let currentDay=0;
let player;

/* Valentine Week Data */
const week=[
["Rose Day","üåπ","Our love blooms quietly, beautifully.",
()=>`This rose isn‚Äôt just a flower ‚Äî it‚Äôs a promise that my feelings for ${personName} will never fade.`],
["Propose Day","üíç","Every heartbeat leans towards you.",
()=>`If I had one moment to choose forever, I‚Äôd choose ${personName}.`],
["Chocolate Day","üç´","Life tastes sweeter with you.",
()=>`My love for ${personName} melts deeper every day.`],
["Teddy Day","üß∏","You are my comfort.",
()=>`${personName}, you are my safest place.`],
["Promise Day","ü§û","Always & forever.",
()=>`I promise to stand beside ${personName}, no matter what.`],
["Hug Day","ü§ó","This hug says it all.",
()=>`Some hugs don‚Äôt need words, just ${personName}.`],
["Kiss Day","üíã","Love sealed softly.",
()=>`A kiss is my silent promise to ${personName}.`],
["Valentine‚Äôs Day","‚ù§Ô∏è","You are my today & tomorrow.",
()=>`${personName}, loving you is my favorite forever.`]
];

const daysEl=document.getElementById("days");
week.forEach((d,i)=>{
  const el=document.createElement("div");
  el.className="day";
  el.innerText=d[0];
  el.onclick=()=>selectDay(i);
  daysEl.appendChild(el);
});

function selectDay(i){
  currentDay=i;
  document.querySelectorAll(".day").forEach(d=>d.classList.remove("active"));
  daysEl.children[i].classList.add("active");
  document.getElementById("icon").innerText=week[i][1];
  document.getElementById("title").innerText="Happy "+week[i][0];
  document.getElementById("text").innerText=week[i][2];
  document.getElementById("note").style.display="none";
}

function updateName(){
  personName=document.getElementById("nameInput").value||"Rishitha";
  document.getElementById("nameTitle").innerText=`Hey ${personName} ‚ù§Ô∏è`;
}

function showNote(){
  document.getElementById("note").innerText=week[currentDay][3]();
  document.getElementById("note").style.display="block";
  if(player) player.playVideo();
}

/* Playful NO button */
const noBtn=document.getElementById("noBtn");
noBtn.onmouseover=moveNo;
noBtn.onclick=moveNo;
function moveNo(){
  noBtn.style.transform=`translate(${Math.random()*200-100}px,${Math.random()*100-50}px)`;
}

/* YouTube API */
function onYouTubeIframeAPIReady(){
  player=new YT.Player('yt-player',{
    videoId:'rC0YWZ0lly8',
    playerVars:{
      autoplay:0,
      controls:0,
      loop:1,
      playlist:'rC0YWZ0lly8',
      modestbranding:1
    }
  });
}

/* Auto calendar */
(function(){
  const t=new Date();
  if(t.getMonth()===1 && t.getDate()>=7 && t.getDate()<=14){
    selectDay(t.getDate()-7);
  }else selectDay(0);
})();

/* Countdown */
function updateCountdown(){
  const target=new Date(new Date().getFullYear(),1,14);
  const now=new Date();
  const diff=target-now;
  document.getElementById("countdown").innerText=
    diff>0?`Valentine‚Äôs Day in ${Math.floor(diff/86400000)} days üíñ`
          :"üíñ Happy Valentine‚Äôs Day üíñ";
}
setInterval(updateCountdown,1000);
updateCountdown();

/* Falling hearts */
setInterval(()=>{
  const f=document.createElement("div");
  f.className="float";
  f.innerText=Math.random()>0.5?"‚ù§Ô∏è":"üåπ";
  f.style.left=Math.random()*100+"vw";
  f.style.animationDuration=Math.random()*3+4+"s";
  document.body.appendChild(f);
  setTimeout(()=>f.remove(),7000);
},450);
</script>

